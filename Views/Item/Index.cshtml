@model mge.ViewModels.Item.IndexViewModel 

@{
    ViewData["Title"] = "Itens";
}

<div class="container">
    <h1 class="text-center">Itens</h1>

    <a href="/Item/Adicionar" class="btn btn-primary">Adicionar</a>

    @if (@Model.Error != null)
    {
        <div class="alert alert-danger mt-2">
            <span>@Model.Error</span>
        </div>
    }

    @if (@Model.Mensagem != null)
    {
        <div class="alert alert-success mt-2">
            <span>@Model.Mensagem</span>
        </div>
    }

    <table class="table w-full mt-2">
        <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Nome
            </th>
            <th>
                Descrição
            </th>
            <th>
                Data de fabricação
            </th>
            <th>
                Categoria
            </th>
            <th>
                Consumo
            </th>
            <th>
                Horas de uso por dia
            </th>
            <th>
                Ações
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach(var ie in @Model.Items)
        {
            <tr>
                <td>@ie.Id</td>
                <td>@ie.Nome</td>
                @if (@ie.Descricao != null)
                {
                    <td>@ie.Descricao</td>
                }
                else
                {
                    <td>Sem descrição</td>
                }
                <td>@ie.DataFabricacao</td>
                <td>Resolver</td>
                <td>@ie.ConsumoWatts</td>
                <td>@ie.HorasUsoDiario</td>
                <td>
                    <a class="text-primary" href="/Item/Editar/@ie.Id">Editar</a>
                    &nbsp; &nbsp;
                    <a class="text-danger" href="/Item/Deletar/@ie.Id">Deletar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>