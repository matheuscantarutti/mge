
@model mge.ViewModels.Parametro.AdicionarViewModel

@{
    ViewData["Title"] = "Parametros";
}

<div class="container">
    <form action="/Parametro/Adicionar" method="post">
        <h1 class="text-center">Adicionar parâmetro</h1>
        @if (@Model.errors != null)
        {
            <div class="alert alert-danger">
                @foreach (var error in @Model.errors)
                    {
                        <span>@error</span>
                    }
            </div>
        }
        <div class="form-group">
            <label for="ValorKwh">Valor kwh</label>
            <input type="text" class="form-control" id="ValorKwh" name="ValorKwh">
        </div>
        <div class="form-group">
            <label for="FaixaConsumoAlto">Faixa de Consumo Alta</label>
            <input type="text" class="form-control" id="FaixaConsumoAlto" name="FaixaConsumoAlto">

        </div>
        <div class="form-group">
            <label for="FaixaConsumoMedio">Faixa de Consumo Média</label>
            <input type="text" class="form-control" id="FaixaConsumoMedio" name="FaixaConsumoMedio" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Cadastrar</button>
            &nbsp; &nbsp; 
            <a href="/Parametro">Voltar</a>
        </div>
    </form>
</div>